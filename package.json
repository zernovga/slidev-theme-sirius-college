{
  "name": "slidev-theme-sirius-college",
  "version": "0.6.0",
  "author": "Gleb Zernov <zernov.ga@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zernovga/slidev-theme-sirius-college.git"
  },
  "type": "module",
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "slides": "slidev slides.md --open",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/cli": "^0.49.29",
    "@slidev/theme-default": "^0.25.0",
    "@slidev/types": "^0.49.29",
    "embeddable-monaco": "^1.0.4",
    "prism-theme-vars": "^0.2.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@slidev/cli": "^0.49.24",
    "prettier": "^3.6.2",
    "prettier-plugin-slidev": "^1.0.5"
  },
  "//": "Learn more: https://sli.dev/guide/write-theme.html",
  "slidev": {
    "colorSchema": "light",
    "highlighter": "all",
    "defaults": {
      "fonts": {
        "sans": "Arial",
        "mono": "Fira Code"
      },
      "transition": "slide-left",
      "lineNumbers": true,
      "mdc": true,
      "monaco": "dev"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "slides.md",
          "example.md",
          "pages/*.md"
        ],
        "options": {
          "parser": "slidev",
          "plugins": [
            "prettier-plugin-slidev"
          ]
        }
      }
    ]
  }
}
